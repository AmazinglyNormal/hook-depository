{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "/lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__"]
}
